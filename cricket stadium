#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    int l,b;
    scanf("%d%d",&l,&b);
    int perimeter=2*(l+b);
    printf("%d\n",perimeter);
    int quantity=l*b;
    printf("%d",quantity);
    return 0;
}
