#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    int n;
    scanf("%d", &n) ;
    int a[n] ;
    for(int i=0;i<n;i++)
    {
        scanf("%d", &a[i]) ;
    }
    int s=0, d=0;
    for(int i=0;i<n;i++) 
    {
        if(a[i]%2==0) 
        {
           s=s+a[i];
        }
        else{
            d=d+a[i];
        }
    }
           printf("%d\n%d", d, s) ;     
    
    return 0;
}
